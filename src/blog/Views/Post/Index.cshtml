@model PostViewModel

<article class="post">
    @if (!Model.Post.IsPublic)
    {
        <div class="text-warning font-italic"><i class="fas fa-info-circle"></i> 这篇文章尚未发布，仅供管理员预览。</div>
    }
    <div class="post-title">
        @if (Model.Post.IsTopping)
        {
            <i class="fas fa-flag fa-sm text-info"></i>
        }
        @Model.Post.Title
    </div>
    <div class="text-muted text-left d-block d-lg-none post-meta">
        <time datetime="@Model.Post.PublishTime.ToDateAndTime()"></time>
        @Html.Raw(Model.Post.GetSimpleMetadataHtml())
    </div>
    <div class="mt-2 mb-4 post-content">
        @Html.Raw(Model.Post.ContentHtml)
        <p class="text-muted">（本文完）</p>
    </div>
</article>

<div class="alert alert-warning post-alert" role="alert">
    <ul>
        @{
            var meta = Model.Post.GetCategoryAndTagHtml();
            if (!string.IsNullOrEmpty(meta))
            {
                <li>发表于 @Html.Raw(meta)</li>
            }
        }
        <li>
            这篇文章的留言，请发送电子邮件至
            <a href="mailto:@Global.Config.Common.AdminEmail?subject=留言 - @Model.Post.Title&body=Good job！">
                @Global.Config.Common.AdminEmail
            </a>
        </li>

        @if (Model.PrevPost != null)
        {
            <li>前一篇：<a href="@Model.PrevPost.FullUrl">@Model.PrevPost.Title</a></li>
        }

        @if (Model.NextPost != null)
        {
            <li>后一篇：<a href="@Model.NextPost.FullUrl">@Model.NextPost.Title</a></li>
        }
    </ul>
</div>

<div id="imgModal" class="modal">
    <span id="modal-close">&times;</span>
    <img id="modal-content">
    <div id="modal-caption"></div>
</div>

@section stickySidebar{
    <partial name="_AsidePostInfo" model="@Model.Post"/>
}

@section script{
    @if (Model.Post.ContainsMath)
    {
        <script>
            MathJax = {
                tex: {
                    inlineMath: [['$', '$'], ['\\(', '\\)']]
                },
                svg: {
                    fontCache: 'global'
                }
            };
        </script>
        <script src="~/script/post-mathjax.min.js" defer asp-append-version="true"></script>
    }
    else
    {
        <script src="~/script/post.min.js" defer asp-append-version="true"></script>
    }
}

@section style{
    <link rel="stylesheet" href="~/style/post.min.css" asp-append-version="true"/>
}