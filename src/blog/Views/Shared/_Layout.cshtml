<!DOCTYPE html>
<html lang="zh">
<head>
    <!--meta tags-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="msapplication-TileColor" content="#0f8da2">
    <meta name="theme-color" content="#0f8da2">
    <meta name="description" content="@ViewDataHelper.GetDescription(ViewData)">
    <meta name="robots" content="@ViewDataHelper.GetRobots(ViewData)">
    <meta name="rating" content="General">
    <meta name="format-detection" content="telephone=no">

    <!--link tags-->
    @RenderSection("style", false)
    <link rel="canonical" href="@ViewDataHelper.GetCanonical(ViewData)">
    <link rel="author" content="@Global.Config.Common.AdminChineseName" href="~/">
    <link rel="license" href="https://creativecommons.org/licenses/by-nc-nd/4.0/deed.zh">
    <link rel="alternate" href="/rss/" type="application/rss+xml" title="@Global.Config.Blog.Name">
    <link rel="alternate" href="/atom/" type="application/atom+xml" title="@Global.Config.Blog.Name">
    <link rel="me" href="mailto:@Global.Config.Common.AdminEmail">
    <link rel="index" href="/">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <title>@ViewDataHelper.GetTitle(ViewData)</title>

    @RenderSection("script", false)
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">@Global.Config.Blog.Name</a>
            <ul class="nav ml-auto">
                <li>
                    <a class="nav-item nav-link" href="/about/">关于</a>
                </li>
                <li>
                    <a class="nav-item nav-link" href="/archive/">存档</a>
                </li>
            </ul>
        </div>
    </nav>
    <main class="container mt-2 pl-3 pr-3 pb-1 pt-3 mb-2">
        @RenderBody()
    </main>
    <footer class="text-muted">
        <div class="container pb-3 pt-3 text-center">
            <div>
                &copy; @DateTime.Now.Year @Global.Config.Common.AdminChineseName &middot;
                Powered by @Global.RuntimeVersion &hearts;
            </div>
        </div>
    </footer>

    <!--App version: @Global.AppVersion.-->
    <!--Page generated at @DateTime.Now.ToDateAndTime().-->
    <!--boot at @Global.StartTime.ToDateAndTime(), has been online for @Global.RunningInterval.-->
</body>
</html>