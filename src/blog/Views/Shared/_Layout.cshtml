</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">@BlogConstant.BlogName</a>
            <ul class="nav ml-auto">
                <li><a class="nav-item nav-link" href="/archive/">存档</a></li>
                <li><a class="nav-item nav-link" href="/about/">关于</a></li>
            </ul>
        </div>
    </nav>

    <div class="container pl-3 pr-3 pt-5 mb-2">

        <div class="row">
            <main class="col-lg-9">
                @RenderBody()
            </main>
            <aside class="col-lg-3 d-none d-lg-block">
                <partial name="_AsideAbout"/>

                @RenderSection("sidebar", false)

                <div class="sticky-top">
                    @RenderSection("stickySidebar", false)

                    <partial name="_AsideCopyright"/>
                </div>

            </aside>
        </div>
    </div>

    <footer class="mt-5">

        <div class="container pb-3 pt-3 text-center mt-3">
            <div>&copy; 2019 Jerry Bian</div>
            <div>
                <a href="/archive/">存档</a> &middot;
                <a href="/about/">关于</a> &middot;
                <a href="/sitemap.xml">sitemap</a>
            </div>
            <div><small>Powered by @BlogState.NetCoreVersion, running for @BlogState.RunningInterval.</small></div>
        </div>
    </footer>

    

