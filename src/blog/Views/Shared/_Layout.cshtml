<!DOCTYPE html>
<html lang="zh">
<head>
    <!--meta tags-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#4285f4">
    <meta name="description" content="@HtmlHeaderHelper.BuildMetaDescription(ViewData["Description"])">
    <meta name="robots" content="@HtmlHeaderHelper.BuildMetaRobots(ViewData["Robots"])">
    <meta name="rating" content="General">
    <meta name="format-detection" content="telephone=no">

    <!--link tags-->
    @RenderSection("style", false)
    <link rel="canonical" href="@ViewData["Canonical"]">
    <link rel="author" content="@BlogConstant.AuthorChineseName">
    <link rel="license" href="https://creativecommons.org/licenses/by-nc-nd/4.0/deed.zh">
    <link rel="alternate" href="/rss/" type="application/rss+xml" title="@BlogConstant.BlogName">
    <link rel="alternate" href="/atom/" type="application/atom+xml" title="@BlogConstant.BlogName">
    <link rel="me" href="mailto:@BlogConstant.AuthorEmail">
    <link rel="archives" href="/archive/">
    <link rel="index" href="/">
    <link rel="dns-prefetch" href="https://jerrybian.github.io/">
    <link rel="icon" sizes="" href="" />

    <title>@HtmlHeaderHelper.BuildTitle(ViewData["Title"])</title>

    @RenderSection("script", false)
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">@BlogConstant.BlogName</a>
            <ul class="nav ml-auto">
                <li><a class="nav-item nav-link" href="/archive/">存档</a></li>
                <li><a class="nav-item nav-link" href="/about/">关于</a></li>
            </ul>
        </div>
    </nav>

    <div class="container pl-3 pr-3 pt-5 mb-2">

        <div class="row">
            <main class="col-lg-9">
                @RenderBody()
            </main>
            <aside class="col-lg-3 d-none d-lg-block">
                <partial name="_AsideAbout" />

                @RenderSection("sidebar", false)

                <div class="sticky-top">
                    @RenderSection("stickySidebar", false)

                    <partial name="_AsideCopyright" />
                </div>

            </aside>
        </div>
    </div>

    <footer class="mt-5">

        <div class="container pb-3 pt-3 text-center mt-3">
            <div>&copy; 2019 Jerry Bian</div>
            <div>
                <a href="/archive/">存档</a> &middot;
                <a href="/about/">关于</a> &middot;
                <a href="/sitemap.xml">sitemap</a>
            </div>
            <div><small>Powered by @BlogState.NetCoreVersion, running for @BlogState.RunningInterval.</small></div>
        </div>
    </footer>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-97849167-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() { dataLayer.push(arguments); }

        gtag('js', new Date());

        gtag('config', 'UA-97849167-1');
    </script>
</body>
</html>
