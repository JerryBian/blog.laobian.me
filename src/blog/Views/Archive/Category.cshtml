@model IEnumerable<BlogCategory>

<div class="archive">
    <div class="mb-4">
        @foreach (var item in Model)
        {
            <a class="btn btn-light archive-link" href="@item.GetRelativeLink()">
                @item.Name <span class="badge badge-light">@item.Posts.Count.ForHuman()</span>
            </a>
        }
    </div>

    <div>
        @foreach (var item in Model)
        {
            <h3 id="@item.Link">
                <span>@item.Name (@item.Posts.Count)</span>
                <a href="@item.GetRelativeLink()">
                    <i class="text-muted fas fa-link fa-xs"></i>
                </a>
            </h3>
            <table>
                @foreach (var post in item.Posts)
                {
                    <tr>
                        <td><span class="text-muted post-meta">@post.PublishTime.ToDate()</span></td>

                        <td>
                            <a href="@post.FullUrl">
                                <span>@post.Title</span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

@section style{
    <link rel="stylesheet" href="~/style/archive.min.css" asp-append-version="true" />
}

@section script{
    <script src="~/script/index.min.js" defer asp-append-version="true"></script>
}