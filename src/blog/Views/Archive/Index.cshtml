@model IEnumerable<BlogArchive>

<div class="archive">
    <div class="mb-4">
        @foreach (var item in Model)
        {
            <a class="btn btn-light archive-link" href="@item.GetRelativeLink()">
                @item.Title <span class="badge badge-light">@item.Posts.Count.Human()</span>
            </a>
        }
    </div>

    <div>
        @foreach (var item in Model)
        {
            <h3 id="@item.Year">
                <span>@item.Title (@item.Posts.Count)</span>
            </h3>
            <table>
                @foreach (var post in item.Posts)
                {
                    <tr>
                        <td>
                            <span class="text-muted post-meta">@post.PublishTime.ToDate()</span>
                        </td>

                        <td>
                            <a href="@post.FullUrl">
                                <span>@post.Title</span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

@section style{
    <link rel="stylesheet" href="~/style/archive.min.css" asp-append-version="true"/>
}

@section script{
    <script src="~/script/index.min.js" defer asp-append-version="true"></script>
}