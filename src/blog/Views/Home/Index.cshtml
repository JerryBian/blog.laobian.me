@model PagedPostViewModel

<div class="post-list">
    <div class="list-group list-group-flush">
        @foreach (var item in Model.Posts)
        {
        <div class="list-group-item flex-column align-items-start">
            <div>
                <h2 class="mb-1">
                    <a href="@item.Post.FullUrl">@item.Post.Title</a>
                </h2>
            </div>
            <div class="container-fluid mt-1 mb-1">
                <div class="row">
                    @{
                        <div class="mb-2 mt-1">@Html.Raw(item.Post.Excerpt)</div>
                    }

                </div>
            </div>
            <small class="text-muted">@Html.Raw(item.GetMetadataHtml())</small>
        </div>
        }
    </div>

    <pagination pagination="@Model.Pagination" url="@Model.Url"></pagination>
    
</div>


