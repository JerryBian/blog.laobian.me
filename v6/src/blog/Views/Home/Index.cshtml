@model Laobian.Blog.Models.PagedPostIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<ul class="list-group list-group-flush">
    @foreach (var item in Model.Posts)
    {
        <li class="list-group-item">
            <h2>
                <a href="@item.Link">@item.Title</a>
            </h2>
            <div class="bg-light p-2">
                <i class="bi bi-calendar-date"></i> <a href="#">@item.PublishTime</a>
                <i class="bi bi-tags"></i>
                @foreach (var tag in item.Tags)
                {
                    <a href="@tag.Link">@tag.Name</a>
                }
                <i class="bi bi-eye"></i> @item.Access 次阅读
                <i class="bi bi-chat-square-text"></i> @item.Comments 次评论

            </div>
            <section>
                @Html.Raw(item.Excerpt)

            </section>

        </li>
    }
</ul>
<page total-pages="@Model.TotalPages" current-page="@Model.CurrentPage" url="@Model.Url"></page>